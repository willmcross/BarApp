@model IEnumerable<BarApp.Models.DrinkMenu>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DrinkName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DrinkName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DrinkId }) |
            @Html.ActionLink("Details", "Details", new { id=item.DrinkId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DrinkId })
            @Html.ActionLink("Order", "Order", new { id = item.DrinkId, DrinkName = item.DrinkName.Trim() })
        </td>
    </tr>
}

</table>
